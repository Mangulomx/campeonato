{% extends 'base.twig' %}
{% block title %} Gesti칩n de eventos {% endblock %}
{% block content %}
    <div class="panel panel-default">
        <div class="panel panel-heading">
            <h3>Gesti칩n de eventos</h3>
        </div>
        <div class="panel panel-body">
        {% set tematicas = ['AGRICULTURA','DEPORTE','OCIO','CULTURA'] %}
        <fieldset>
            <legend>Editar evento</legend>
            <form role="form" class="form-horizontal" method="POST">
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" for="id_evento">#evento</label>
                    <div class="col-md-5 col-xs-5">
                        <input type="number" name="id_evento" value="{{ evento['id'] }}" disabled="disabled">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" for="selectEvento">Seleccione evento</label>
                    <div class="col-md-5 col-xs-5">
                        <select name="selectEvento" class="form-control selectEvento">
                            <option value="-1">Seleccione evento</option>  
                            {% for i, tematica in tematicas %}
                            <option value={{ i }} {%if tematica == tematicas[evento.id_olimpiada -1] %} selected=true {% endif %}>{{ tematica }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="inputtematica">Tem치tica</label>
                    <div class="col-md-5">
                        <input id="inputtematica" name="inputtematica" placeholder="Introduce la tem치tica para el evento deportivo.." value="{{ evento.actividad_tematica }}" class="form-control input-md required" type="text">
                    </div>
                </div>
               
                <div class="form-group text-center">
                        <button type="submit" id="edit-evento" name="edit-evento" class="btn btn-success">Modificar</button>
                        <button type="reset" id="limpiar" name="limpiar" class="btn btn-primary">limpiar</button>    
                </div>
            </form>
        </fieldset>       
        </div>       
    </div>
{% endblock %}
